<h2>New Project</h2>

<div class="form_errors">
  <% try(:project_errors).each do |error| %>
    <%= tag.i " "+error, class: 'fas fa-exclamation-triangle', style: 'color: #ce3636;' %>
  <% end %>
</div>

<%= form_for @project do |f| %>
  <div class="field">
    <%= f.label(:name, 'Project Name') %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  
  <div class="field">
    <%= f.label :lang, 'Programming Language' %>
    <%= f.text_field :lang %>
  </div>

  <%= hidden_field_tag :user_id, current_user.id %>
  <%= f.submit %>
<% end %>
